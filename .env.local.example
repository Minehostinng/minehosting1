# ============================================================
# CONFIGURAÇÃO LOCAL PARA DESENVOLVIMENTO
# ============================================================
# Copie este arquivo como .env para rodar localmente

# GitHub OAuth (Crie em: https://github.com/settings/developers)
GITHUB_CLIENT_ID=seu_client_id_para_localhost
GITHUB_CLIENT_SECRET=seu_client_secret_para_localhost
GITHUB_PAT=seu_personal_access_token
GITHUB_OWNER=seu_usuario_github
GITHUB_REPO=seu_repo_template

# Para desenvolvimento LOCAL, use:
CALLBACK_URL=http://localhost:3000/auth/github/callback

# Sessão
SESSION_SECRET=sua_chave_aleatoria_local

# Ambiente
NODE_ENV=development
PORT=3000

# Debug (descomente para ver logs)
# DEBUG=true

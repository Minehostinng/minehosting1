{
  "version": 2,
  "public": true,
  "buildCommand": "npm install",
  "env": [
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GITHUB_PAT",
    "GITHUB_OWNER",
    "GITHUB_REPO",
    "CALLBACK_URL",
    "SESSION_SECRET",
    "NODE_ENV"
  ],
  "functions": {
    "api/server.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/auth/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/health",
      "destination": "/api/server.js"
    }
  ]
}
